{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "A simple boilerplate based on npm scripts which serves as a base for quick prototyping.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers 'last 2 versions, ie > 9' -r dist/css/*",
    "browserify": "browserify src/js/main.js > dist/js/main.js -t [ babelify --presets [ es2015 ] ]",
    "uglify": "uglifyjs dist/js/main.js -m -c -o dist/js/main.js",
    "lint": "eslint src/js",
    "watch:css": "onchange 'src/scss/*.scss' 'src/components/**/*.scss' -- npm run build:css",
    "watch:js": "onchange 'src/js/*.js' 'src/components/**/*.js' -- npm run build:js",
    "watch": "npm-run-all --parallel -r serve watch:*",
    "build:css": "mkdir -p dist/css && npm run scss && npm run autoprefixer",
    "build:js": "mkdir -p dist/js && npm run lint && npm run browserify && npm run uglify",
    "build": "mkdir -p dist && npm-run-all build:*",
    "postinstall": "npm run serve",
    "serve": "npm run build && browser-sync start --server --open --files 'dist'"
  },
  "author": "Thomas Kaenel",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^7.1.3",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.13",
    "browserify": "^14.4.0",
    "eslint": "^4.5.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.1.0",
    "uglify-js": "^3.0.28"
  }
}
